<ul class="aside-list">
    {{#each usersChat}}
        <li class="aside-list__item"
            tabindex="0"
            {{#eq id ../selectedChatId}}active{{/eq}}
            aria-label="Чат: {{title}}, последнее сообщение: {{last_message.content}}"
            data-id="{{id}}">

            <figure class="aside-list__avatar">
                <!-- <img class="aside-list__avatar-img" src="{{avatar}}" /> -->
            </figure>

            <div class="aside-list__info">
                <div class="aside-list__nameAndDate">
                    <h3 class="aside-list__title">{{title}}</h3>
                    <p class="aside-list__date">
                        {{#if last_message.time}}
                            {{last_message.time}}
                        {{/if}}
                    </p>
                </div>
                <p>
                    {{#if last_message.user.login}}
                        <span class="aside-list__label">{{last_message.user.login}}: </span>
                    {{/if}}
                    {{last_message.content}}
                </p>
                {{#if unread_count}}
                    <div class="aside-list__unread">{{unread_count}}</div>
                {{/if}}
            </div>
        </li>
    {{/each}}
</ul>
